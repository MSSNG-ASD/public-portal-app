<div class="row">
  <div class="col">
    <h1 class="title"><%= dt("#{controller_name}.#{action_name}.title", model: dt("#{controller_name}.#{action_name}.model")).html_safe %></h1>
    <%= link_to dt('actions.cancel'), search_subject_sample_searches_path, class: 'btn btn-secondary' %>
    <%= link_to SubjectSampleSearch.human_attribute_name(:destroy_all), delete_all_subject_sample_searches_path, class: 'btn btn-danger', method: :delete, data: { confirm: dt("#{controller_name}.#{action_name}.confirm") } %>
  </div>
</div>
<div class="row">
  <div class="col">
    <table id="datatable_all" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th><%= SubjectSampleSearch.human_attribute_name(:name) %></th>
        </tr>
      </thead>
      <tbody>
        <% @subject_sample_searches.each do |subject_sample_search| %>
          <tr>
            <td>
              <%= link_to content_tag(:span, "", class: "fa fa-trash-o"), subject_sample_search_path(subject_sample_search), method: :delete, class: "btn btn-mini btn-danger btn-xs", data: { confirm: dt("#{controller_name}.#{action_name}.confirm", model: subject_sample_search.name) } %>
              <%= link_to content_tag(:span, "", class: "fa fa-pencil"), edit_subject_sample_search_path(subject_sample_search), class: 'btn btn-small btn-primary btn-xs' %>
              <%= link_to subject_sample_search.name, subject_sample_search_path(subject_sample_search) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
