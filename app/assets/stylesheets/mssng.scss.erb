$sansSerifFont: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', Arial, sans-serif;
$monospaceFont: 'Roboto Mono', 'Andale Mono', monospace;

@mixin font-size($sizeValue: 16) {
  font-size: $sizeValue + px;
}

@mixin fluid-background($aspect-ratio) {
  background-attachment: scroll;
  background-repeat: no-repeat;
  background-size: 100% auto;
  display: block;
  height: 0;
  padding: 0 0 $aspect-ratio;
}

@mixin calc($property, $expression) {
  #{$property}: -webkit-calc(#{$expression});
  #{$property}: calc(#{$expression});
}

@function strip-units($number) {
  @return $number / ($number * 0 + 1);
}

