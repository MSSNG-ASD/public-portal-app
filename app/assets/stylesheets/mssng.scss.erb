// Loading Indicator for Page Transition
#loading-indicator-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);

  &.disabled {
    display: none;
  }
}

#loading-indicator-box {
  background-color: rgba(0, 0, 0, 0.9);
  border-radius: 5px;
  box-shadow: rgba(0, 0, 0, 0.5) 0 5px 20px;
  padding: 48px 24px 36px 24px;

  &> div:last-child {
    color: white;
    margin-top: 24px;
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: 1px;
    text-align: center;
    text-transform: uppercase;
  }
}

#loading-indicator {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 120px;
  height: 24px;

  .dot {
    width: 24px;
    height: 24px;
    border-radius: 24px;
    animation-duration: 1s;
    animation-iteration-count: infinite;
  }

  .dot.a {
    background-color: #06AED5;
    animation-name: loading-indicator-spinner-a;
  }

  .dot.b {
    background-color: #F0C808;
    animation-name: loading-indicator-spinner-b;
  }

  .dot.c {
    background-color: #FFF1D0;
    animation-name: loading-indicator-spinner-c;
  }

  .dot.d {
    background-color: #FC0000;
    animation-name: loading-indicator-spinner-d;
  }

  &.slow {
    .dot {
      animation-duration: 2s;
    }
  }
}

@keyframes loading-indicator-spinner-a {
  from {
    opacity: 0;
    margin-bottom: 0px;
  }

  25% {
    opacity: 1;
    margin-bottom: 24px;
  }

  50% {
    opacity: 0;
    margin-bottom: 0px;
  }

  75% {
    opacity: 0;
  }

  to {
    opacity: 0;
  }
}

@keyframes loading-indicator-spinner-b {
  from {
    opacity: 0;
  }

  25% {
    opacity: 0;
    margin-bottom: 0px;
  }

  50% {
    opacity: 1;
    margin-bottom: 24px;
  }

  75% {
    opacity: 0;
    margin-bottom: 0px;
  }

  to {
    opacity: 0;
  }
}

@keyframes loading-indicator-spinner-c {
  from {
    opacity: 0;
  }

  25% {
    opacity: 0;
  }

  50% {
    opacity: 0;
    margin-bottom: 0px;
  }

  75% {
    opacity: 1;
    margin-bottom: 24px;
  }

  to {
    opacity: 0;
    margin-bottom: 0px;
  }
}

@keyframes loading-indicator-spinner-d {
  from {
    opacity: 1;
    margin-bottom: 24px;
  }

  25% {
    opacity: 0;
    margin-bottom: 0px;
  }

  50% {
    opacity: 0;
  }

  75% {
    opacity: 0;
    margin-bottom: 0px;
  }

  to {
    opacity: 1;
    margin-bottom: 24px;
  }
}

